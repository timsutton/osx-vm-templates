    }
  ],
  "min_packer_version": "0.7.0",
  "post-processors": [
    "vagrant"
  ],
  "provisioners": [
    {
      "destination": "/private/tmp/set_kcpassword.py",
      "source": "../scripts/support/set_kcpassword.py",
      "type": "file"
    },
    {
      "execute_command": "chmod +x {{ .Path }}; sudo {{ .Vars }} {{ .Path }}",
      "scripts": [
        "../scripts/vagrant.sh",
        "../scripts/vmware.sh",
        "../scripts/parallels.sh",
        "../scripts/xcode-cli-tools.sh",
